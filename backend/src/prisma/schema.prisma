generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @unique @default(cuid())
  username String @unique
  password String
  organisation Organisation[]
}

model Organisation{
  id String @id @unique @default(cuid())
  name String @unique
  ownerId String
  owner User @relation(fields: [ownerId], references: [id])
  bills BillDetails[]
}

model Product{
  id String @id @unique @default(cuid())
  name String
  quantity Int
  imgUrl String ?
  type String ?
  costPrice Int
  sellPrice Int ?
  billItems BillItem[]
}

model BillDetails{
  id String @unique @id @default(cuid())
  paymentType PaymentType
  type BillType
  date DateTime @default(now())
  organisationId String 
  organisation Organisation @relation(fields: [organisationId], references: [id])
  totalAmount Int
  supplierId String?
  supplier Supplier? @relation(fields: [supplierId], references: [id])
  customerId String?
  customer Customer? @relation(fields: [customerId], references: [id])
  items BillItem[]
  cardDetails CardDetail?
  upiDetails UPIdetail?
}

model CardDetail{
  id String @id @unique @default(cuid())
  accountNumber BigInt
  accountHolder String
  cardType CardType
  bank String
  billId String @unique
  Bill BillDetails? @relation(fields: [billId], references: [id], onDelete: Cascade)
}

model UPIdetail{
  id String @id @unique @default(cuid())
  upiId String
  application String
  billId String @unique
  Bill BillDetails? @relation(fields: [billId], references: [id], onDelete: Cascade)
}

model BillItem{
  id String @id @unique @default(cuid())
  quantity Int
  price Int
  productId String
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  billId String
  bill BillDetails @relation(fields: [billId], references: [id], onDelete: Cascade)
}

model Customer{
  id String @id @unique @default(cuid())
  name String
  contact String ?
  email String ?
  address String ?
  bills BillDetails[]
}

model Supplier{
  id String @id @unique @default(cuid())
  name String
  contact String ?
  email String ?
  address String ?
  bills BillDetails[]
}

model paymentStatus{
  id String @id @unique @default(cuid())

}

enum BillType{
  Sale
  Purchase
}

enum PaymentType{
  Cash
  UPI
  Card
}

enum CardType{
  Debit
  Credit
}